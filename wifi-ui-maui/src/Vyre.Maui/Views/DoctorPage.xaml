<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Vyre.Maui.Views.DoctorPage"
    Title="Doctor">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Button Text="Run checks" Command="{Binding RefreshCommand}" />
        <Label Text="{Binding StatusMessage}" FontAttributes="Italic"/>

        <Label Text="{Binding NativeVersion, StringFormat='Native: {0}'}" />
        <Label Text="{Binding PermissionsStatus, StringFormat='Permissions: {0}'}" />
        <Label Text="{Binding CapabilitiesStatus, StringFormat='Capabilities: {0}'}" />
    </VerticalStackLayout>
</ContentPage>
